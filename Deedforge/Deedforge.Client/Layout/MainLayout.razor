@using Deedforge.Shared.Compendium
@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true" Theme="@MyCustomTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudDrawer
        @bind-Open="@_drawerOpen"
        Fixed="true"
        Elevation="1"
        Color="Color.Dark"
        Variant="@DrawerVariant.Mini"
        OpenMiniOnHover="true"
        ClipMode="DrawerClipMode.Never"
        Style="text-wrap: nowrap; overflow: hidden;">
        <NavMenu />
        <MudSpacer></MudSpacer>
        <MudImage Src="images/DeedforgeLogo-nobg.png" Alt="Deedforge" />
    </MudDrawer>
    <MudMainContent Class="container-background">
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-8 pb-16">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    MudTheme MyCustomTheme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Dark = "rgba(35, 35, 35, 1)",
            Tertiary = "rgba(146, 142, 117, 1)",
            Primary = "rgba(146, 142, 117, 1)",
            Surface = "rgba(53, 53, 53, 1)",
        },
        LayoutProperties = new LayoutProperties()
        {
            DrawerMiniWidthLeft = "80px"
        },
        Typography = new Typography()
        {
            Default = new Default()
            {
                FontFamily = new[] { "Marcellus-Regular" }
            }
        }
    };

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
