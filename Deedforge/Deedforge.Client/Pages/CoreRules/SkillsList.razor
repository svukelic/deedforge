@page "/core-rules/skills-list"
@using Deedforge.Shared.Compendium

<PageTitle>
    Core Rules - List of Skills
</PageTitle>

<h1>List of Skills</h1>

<br />

<MudTable Items="@Compendium.CompendiumData.Skills" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh><MudText Typo="Typo.h6">Name</MudText></MudTh>
        <MudTh><MudText Typo="Typo.h6">Description</MudText></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name"><strong>@context.Name</strong></MudTd>
        <MudTd DataLabel="Description"><i>@context.Description</i></MudTd>
    </RowTemplate>
</MudTable>
